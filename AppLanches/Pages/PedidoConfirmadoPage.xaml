<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="AppLanches.Pages.PedidoConfirmadoPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    Title="Pedido Confirmado">
    <VerticalStackLayout
        Padding="20"
        HorizontalOptions="CenterAndExpand"
        VerticalOptions="CenterAndExpand">
        <Image
            Aspect="AspectFit"
            HeightRequest="300"
            Source="confirmado.gif"
            WidthRequest="300" />

        <Label
            Margin="0,20,0,0"
            FontSize="24"
            HorizontalOptions="Center"
            Text="Seu pedido foi confirmado!"
            TextColor="DarkBlue"
            VerticalOptions="CenterAndExpand" />

        <Button
            x:Name="btnRetornar"
            Clicked="btnRetornar_Clicked"
            HorizontalOptions="Center"
            Text="Retornar"
            VerticalOptions="CenterAndExpand" />
    </VerticalStackLayout>
</ContentPage>