            HeightRequest="300"
            Source="emptycart.jpg"
            WidthRequest="300" />

        <Label
            Margin="0,20,0,0"
            FontAttributes="Bold"
            FontSize="24"
            HorizontalOptions="Center"
            Text="Seu carrinho estÃ¡ vazio!"
            TextColor="DarkBlue"
            VerticalOptions="CenterAndExpand" />

        <Button
